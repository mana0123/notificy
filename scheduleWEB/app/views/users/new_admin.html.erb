<h1>adminユーザ追加</h1>

<%= form_with model: @user, url: users_create_admin_path do |form| %>
  <div class="form-group row">
    <%= form.label :name, '名前', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password, 'パスワード', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password_confirmation, 'パスワード再入力', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <%= form.submit '登録', class: "btn btn-primary" %>
<% end %>
